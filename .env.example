# BunChat Environment Variables
# Copy this file to .env for development or .env.production for production

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Type: 'sqlite' (default) or 'mysql'
DB_TYPE=sqlite

# SQLite Configuration (used when DB_TYPE=sqlite)
DATABASE_PATH=chat.db

# MySQL Configuration (used when DB_TYPE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=bunchat

# Session Configuration (in days)
SESSION_EXPIRY_DAYS=7
